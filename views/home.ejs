<link rel="stylesheet" href="/css/home.css">


<!-- All projects And Issues Details -->
<section class="container" id="projects-container">
  <!-- Projects List show Project Details of Sign in User-->
  <div class="row" id="project-row">
    <div class="col-12 col-md-6" id="project-list">
      <h1>Projects :-</h1>

      <!-- If User is Sign in the show his/her Projects -->
      <%if(locals.user){%>
        <ul>
          <%for(project of locals.allProjects){%>
            <div class="projects mt-2" id="<%=project.id%>">
              <!-- include project details of Every project using Partials -->
              <%-include('_projectItems')-%>
            </div>
            <%}%>
        </ul>
        <% } %>
    </div>

    <!-- Issue Details Show Issue Details if User is Sign-in  -->
    <div class="col-12 col-md-4" id="project-issues-list">
      <h3>Top Issues :-</h3>
      <%if(locals.user){%>
        <ul>
          <%for(issue of locals.topIssues){%>
            <%-include('_issueItems')-%>
              <%}%>
        </ul>
        <%}%>
          <div id="show-all-issues">
            <h5><a href="project/all-issues">Show all</a></h5>
          </div>
    </div>
  </div>
</section>