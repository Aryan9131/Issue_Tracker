<!-- Include stylesheets for the page -->
<link rel="stylesheet" href="/css/home.css">
<link rel="stylesheet" href="/css/signUp.css">

<!-- Container for the sign-up form -->
<div class="container" id="sign-up-form-container">
    <!-- Row for the sign-up form -->
    <div class="row" id="sign-up-form-row">
        <!-- Column for the form items -->
        <div class="col-md-8" id="sign-up-items">
            <!-- Sign-up form -->
            <form action="/user/create-user" method="POST">
                <!-- Name input field -->
                <div class="mb-3">
                    <label for="exampleInputText1" class="form-label">Name</label>
                    <input name="name" type="text" class="form-control" id="exampleInputText1" aria-describedby="textHelp">
                </div>
                <!-- Email input field -->
                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">Email address</label>
                    <input name="email" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                    <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
                </div>
                <!-- Password input field -->
                <div class="mb-3">
                    <label for="exampleInputPassword1" class="form-label">Password</label>
                    <input name="password" type="password" class="form-control" id="exampleInputPassword1">
                </div>
                <!-- Submit button -->
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
            <!-- Link to the sign-in page -->
            <div id="sign-up-link"><a href="/user/sign-in" class="btn btn-secondary mt-3">Sign-in</a></div>
        </div>
    </div>
</div>
